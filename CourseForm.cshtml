@model StudentRegistrationApplication.ViewModels.CourseFormViewModel
@{
    ViewBag.Title = "CourseForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>New Course</h2>

@using (Html.BeginForm("Save", "Courses"))
{
    @Html.ValidationSummary(true,"Please fix the following errors")
    <div class="form-group">
        @Html.LabelFor(m => m.Course.Name)
        @Html.TextBoxFor(m => m.Course.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m =>m.Course.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.DepartmentId)
        @Html.TextBoxFor(m => m.Course.DepartmentId, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.DepartmentId)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Course.GPA)
        @Html.TextBoxFor(m => m.Course.GPA, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.GPA)
    </div>
    @Html.HiddenFor(m => m.Course.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Submit</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
    }